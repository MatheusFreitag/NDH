<%= simple_form_for(@pessoa) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :sobrenome %>
    <%= f.input :estadoCivil %>
    <%= f.input :nacionalidade %>
    <%= f.input :endereco %>
    <%= f.input :genero %>
    <%= f.input :idade %>
    <%= f.input :profissao %>
    <%= f.input :beneficio %>
    <%= f.input :alfabetizado %>
    <%= f.input :numeroCarteiraDeTrabalho %>
    <%= f.input :referenciaProcesso %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
