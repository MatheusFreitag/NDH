<%= simple_form_for(@pessoa) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :sobrenome %>
    <%= f.label "Estado Civil"%>
    <%= f.select :estadoCivil, options_for_select([['Solteiro', 'Solteiro'], ['Casado', 'Casado'], ['Divorciado', 'Divorciado'] , ['Viuvo', 'Viuvo'], ['Separado', 'Separado'], ['Companheiro', 'Companheiro']])%>
    <%= f.input :nacionalidade %>
    <%= f.input :endereco, label: "Endereço" %>
    <%= f.label "Genero"%>
    <%= f.select :genero, options_for_select([['Masculino', 'Masculino'], ['Feminino', 'Feminino']]) %>
    <%= f.input :idade %>
    <%= f.input :profissao, label: "Profissão" %>
    <%= f.input :beneficio %>
    <%= f.input :alfabetizado %>
    <%= f.input :numeroCarteiraDeTrabalho, label: 'Número da Carteira de Trabalho' %>
    <%= f.input :referenciaProcesso, label: 'Número do Processo Correspondente ' %>
  </div>

  <div class="form-actions">
    <%= f.submit "Submeter" , class: "voltar waves-effect waves-light btn-large deep-purple darken-3" %>
    <%= link_to 'Cancelar', pessoas_path, class: "waves-effect waves-light btn-large deep-purple darken-3" %>
  </div>
<% end %>
